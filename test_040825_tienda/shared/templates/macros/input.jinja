{% macro input(id=None, name=None, label=None, type='text', required=True, value='') %}
    <div class="space-y-2">
        <label for="{{ id }}" class="block text-sm font-medium text-gray-700 dark:text-gray-300">{{ label }}</label>
        <input type="{{ type }}" 
               id="{{ id }}" 
               name="{{ name }}" 
               {% if required %}required{% endif %}
               value="{{ value }}"
               class="mt-1 block w-full rounded-md border-gray-300 shadow-sm dark:border-gray-700 dark:text-gray-300 focus:border-blue-500 focus:ring-blue-500 p-2 border">
    </div>
{% endmacro %}
{% from 'macros/index.jinja' import index %}
{% from 'macros/card.jinja' import card %}
{% from 'macros/input.jinja' import input %}

{% call index(class="py-4", title="Tienda", messages=messages) %}
    {% call card("Signup", card_class="sm:max-w-lg")%}
        <form method="post" action="{{ url('signup') }}" class="w-full space-y-6">
            <input type="hidden" name="csrfmiddlewaretoken" value="{{csrf_token}}">
            
            {{ input(id="username", name="username", label="Nombre de usuario", type="text", required=true) }}
            
            {{ input(id="email", name="email", label="Correo electrónico", type="email", required=true) }}
            
            {{ input(id="password1", name="password1", label="Contraseña", type="password", required=true) }}
            
            {{ input(id="password2", name="password2", label="Confirmar contraseña", type="password", required=true) }}
            
            <button type="submit" 
                class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                Registrarse
            </button>
        </form>
    {% endcall %}
{% endcall %}